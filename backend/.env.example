# =============================================================================
# Accessify Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Your OpenAI API key for embeddings and chat completions
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding model for RAG (Retrieval Augmented Generation)
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBED_MODEL=text-embedding-3-small

# Chat model for AI responses
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
CHAT_MODEL=gpt-4o-mini

# Number of top chunks to retrieve for RAG context
EMBED_TOPK=24

# =============================================================================
# Database Configuration (TiDB/MySQL)
# =============================================================================
# TiDB Cloud connection details
# Get your connection info from: https://tidbcloud.com/console/clusters
TIDB_HOST=gateway01.ap-northeast-1.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your-tidb-username
TIDB_PASSWORD=your-tidb-password
TIDB_DB=accessibility

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
# Secret key for signing JWT tokens
# IMPORTANT: Generate a strong random secret for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-change-in-production

# JWT token expiration time in hours (default: 24 hours)
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Email Service Configuration
# =============================================================================
# Email mode: 'mock' for development (logs to console), 'smtp' for production
EMAIL_MODE=mock

# SMTP server configuration (required when EMAIL_MODE=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-specific-password

# Email sender information
SMTP_FROM_EMAIL=noreply@accessify.com
SMTP_FROM_NAME=Accessify

# =============================================================================
# Application Configuration
# =============================================================================
# Base URL for the frontend application (used in email links)
BASE_URL=http://localhost:5173

# Backend server configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Security Configuration
# =============================================================================
# CORS allowed origins (comma-separated list)
# In production, set this to your actual frontend domain
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session configuration
SESSION_EXPIRATION_HOURS=24
MAX_SESSIONS_PER_USER=5

# =============================================================================
# Domain Verification Configuration
# =============================================================================
# Timeout for domain verification HTTP requests (seconds)
DOMAIN_VERIFICATION_TIMEOUT=10

# Verification token expiration (days)
VERIFICATION_TOKEN_EXPIRATION_DAYS=7

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Maximum login attempts per IP address within the time window
MAX_LOGIN_ATTEMPTS=5

# Time window for rate limiting (minutes)
RATE_LIMIT_WINDOW_MINUTES=15

# =============================================================================
# Development/Debug Configuration
# =============================================================================
# Set to 'true' to enable debug logging
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
